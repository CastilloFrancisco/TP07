@{
    ViewData["Title"] = "Crear Tarea";
}


<div class="form-container">
    <form action='@Url.Action("CrearTareaGuardar", "Home")' method="POST" enctype="multipart/form-data" class="form-box">
        <input type="text" name="Titulo" placeholder="Nombre de Tarea" required />
        <input type="text" name="Descripcion" placeholder="Descripción" required />
        <input type="date" name="FechaFin" placeholder="Fecha de Finalización" required />
        <input type="submit" value="Crear Tarea" class="btn-login" />
    </form>
</div>
