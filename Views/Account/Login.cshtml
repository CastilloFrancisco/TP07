@{
    ViewData["Title"] = "Login";
}

<div class="form-container">
    <h2>Iniciar Sesión</h2>

    @if (ViewBag.Error == true)
    {
        <p class="error-msg">Verifique su usuario y contraseña</p>
    }

    <form action='@Url.Action("Logear", "Account")' method="Post" enctype="multipart/form-data" class="form-box">
        <input type="text" name="usuario" placeholder="Usuario" required />
        <input type="password" name="contraseña" placeholder="Contraseña" required />
        <input type="submit" value="Iniciar Sesión" class="btn-login" />
    </form>

    <a href="@Url.Action("CrearUsuario", "Account")" class="link-alt">Registrarse</a>
</div>

